<div class="container">
  <div class="row">
    <h4 style="margin-left:160px" class="px-4 font-weight-bold">配送先登録/一覧</h4>
  </div>
  
  <%= render 'form', address: @address %>
  
  <div class="row">
    <div class="col-8 mt-5">
      <table class = "table table-bordered" style = "margin-left: 75px;">
        <thead class = "table-area">
          <tr>
            <td class="col-1">郵便番号</td>
            <td class="col-2">住所</td>
            <td class="col-1">宛名</td>
            <td class="col-2"></td>
          </tr>
        </thead>
      <tbody>
        <% @addresses.each do |address| %>
          <tr>
            <td><%= address.postal_code %></td>
            <td><%= address.address %></td>
            <td><%= address.name %></td>
            <td>
              <%= link_to '編集する', edit_address_path(address), class: "btn btn01" %>
              <%= link_to '削除する', address_path(address), method: :delete, class: "btn btn02" %>
            </td>
          </tr>
        <% end %> 
      </tbody>
    </table>
    </div>
  </div>
</div>