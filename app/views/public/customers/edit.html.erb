<div class="container">
  <div class="row">
    <h4>会員情報編集</h4>
  </div>
  <div class="row">
    <div class="col-10">
      <%= form_with model:@customer do |f| %>

      <div class="row mb-3">
        <%= f.label :名前, class:"col-md-3" %>
        <%= f.text_field :last_name, placeholder:"令和", autofocus: true, class:"col-md-3" %>
        <%= f.text_field :first_name, placeholder:"道子", autofocus: true, class:"offset-md-1 col-md-3" %>
      </div>
      <div class="row mb-3">
        <%= f.label :フリガナ, class:"col-md-3" %>
        <%= f.text_field :last_name_kana, placeholder:"レイワ", autofocus: true, class:"col-md-3" %>
        <%= f.text_field :first_name_kana, placeholder:"ミチコ", autofocus: true, class:"offset-md-1 col-md-3" %>
      </div>
      <div class="row mb-3">
        <%= f.label :郵便番号, class:"col-md-3" %>
        <%= f.text_field :postal_code, placeholder:"0000000", autofocus: true, class:"col-md-3" %>
      </div>
      <div class="row mb-3">
        <%= f.label :住所, class:"col-md-3" %>
        <%= f.text_field :address, placeholder:"東京都渋谷区代々木神園町0-0", autofocus: true,class:"w-100", class:"col-md-3" %>
      </div>
      <div class="row mb-3">
        <%= f.label :電話番号, class:"col-md-3" %>
        <%= f.text_field :phone_number, placeholder:"00000000000", autofocus: true, class:"col-md-3" %>
      </div>
      <div class="row mb-3">
        <%= f.label :メールアドレス, class:"col-md-3" %>
        <%= f.email_field :email, placeholder:"sample@sample.com", autofocus: true, autocomplete: "email", class:"col-md-3" %>
      </div>
      <div class="form-inline" style="margin-bottom: 150px;">
        <div class="form-group" style="margin-left:220px">
          <%= f.submit "編集内容を保存", class: "btn btn-block btn01" %>
        </div>
        <div class="form-group", style="margin-left:150px">
          <%= link_to "退会する", unsubscribe_path, class: "btn btn-block btn02" %>
      </div>
    </div>
    </div><br>

      <% end %>
  </div>
</div>

