<div class="container">
  <h4 class="text-center", style=" width:170px; margin:30px 0 50px 80px;"><strong>ジャンル編集</strong></h4>
  <%= form_with model:@genre, url:admin_genre_path(@genre.id), method: :patch do |f| %>
    <%= f.label :name, "ジャンル名", style:"margin-top:5px ;"%>
   <%= f.text_field :name, placeholder: "ジャンル名", style:"margin-left:50px;" %>
    <%= f.submit "変更を保存",class: "btn btn01 px-4", style:"font-weight:bold; margin-left:50px;" %>
  <% end %>
</div>